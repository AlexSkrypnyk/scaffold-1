ARG GOVCMS_IMAGE_VERSION=latest
FROM govcms8lagoon/govcms8:${GOVCMS_IMAGE_VERSION}

RUN rm -rf /app
COPY composer.json composer.lock /app/
COPY scripts /app/scripts
# Install composer and remove composers cache directory to reduce image size.
RUN composer install --no-dev && rm -rf ~/.composer/cache
COPY . /app

# Define where the Drupal Root is located
ENV WEBROOT=web

COPY .docker/aliases.drushrc.php /home/.drush/site-aliases/
COPY .docker/scripts /usr/bin/

RUN fix-permissions /home/.drush/
