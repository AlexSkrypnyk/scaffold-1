##
# This image is packed with test tools and does not run on lagoon.
# @see upstream docs https://github.com/govCMS/govcms8lagoon/blob/master/.docker/Dockerfile.test
#

ARG CLI_IMAGE
FROM ${CLI_IMAGE} as cli

FROM govcms8lagoon/test
ENV WEBROOT=web

RUN rm -rf /app
COPY --from=cli /app /app

# Since `cli` ran --no-dev, run composer install again to get all dev tools.
RUN composer install
